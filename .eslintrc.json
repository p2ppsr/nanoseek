{
	"root": true,
	"parser": "@typescript-eslint/parser",
	"plugins": ["@typescript-eslint"],
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended"
	],
	"rules": {
		"semi": ["error", "never"],
		"indent": ["error", 2],
		"no-multiple-empty-lines": ["error", { "max": 1, "maxEOF": 0 }]
	},
	"env": {
		"node": true
	}
}
